  "scripts": {
    "start": "react-dotenv && react-scripts start",
    "build": "react-dotenv && react-scripts build",
    "build:staging": "env-cmd -f .env.staging react-scripts build",
    "serve": "react-dotenv && serve build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install",
    "start-json": "json-server -p 4000 -w src/data/MockDataFile.json",
    "test:coverage": "react-scripts test --env=jsdom --watchAll=false --coverage",
    "generate": "dotenv -- cross-var dtsgen -o ./src/model/types.d.ts --url %REACT_APP_API_URL_DOCS%"
  },

  "//": "dotenv -- cross-var => these command are used to read a variable out of the package json file",
  "//": "dtsgen => is used here to generate the type file in the output path ./src/model FROM the url: %REACT_APP_API_URL_DOCS%, this is the reason to use 'dotenv -- cross-var' ",

  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@redux-devtools/core": "^3.13.1",
